{
    "private": true,
    "name": "@cessair/package",
    "version": "1.1.0",
    "description": "A catalyst for making robust and stable core of either module or service.",
    "keywords": [
        "cessair",
        "helper",
        "utility",
        "catalyst",
        "extension"
    ],
    "homepage": "https://github.com/cessair/cessair#readme",
    "bugs": {
        "url": "https://github.com/cessair/cessair/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Yongbin Min",
        "email": "contact@cichol.com",
        "url": "https://cessair.cichol.com/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cessair/cessair.git"
    },
    "scripts": {
        "postinstall": "cessair generate-babelrc",
        "prepublishOnly": "cessair print-error 'Root package is not for publishing.'",
        "build": "npm run build:clean && npm run build:bootstrap && npm run build:execute",
        "build:clean": "lerna clean --yes --loglevel silent",
        "build:bootstrap": "lerna bootstrap --loglevel silent",
        "build:execute": "lerna exec -- npm run build -- --silent",
        "test": "npm run test:eslint && npm run test:ava",
        "test:eslint": "eslint packages/*/sources",
        "test:ava": "ava packages/*/tests/*.js"
    },
    "dependencies": {
        "cessair": "./packages/cessair"
    },
    "devDependencies": {
        "@cessair/building": "./packages/building",
        "@cessair/cli": "./packages/cli",
        "ava": "^0.24.0",
        "babel-eslint": "^8.0.3",
        "eslint": "^4.13.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "lerna": "^2.5.1"
    },
    "engines": {
        "node": ">=8.9.3",
        "npm": ">=5.6.0"
    },
    "ava": {
        "require": "babel-register",
        "babel": "inherit"
    }
}
