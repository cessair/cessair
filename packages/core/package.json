{
    "name": "@cessair/core",
    "version": "1.1.0",
    "description": "The core logic of Cessair.",
    "keywords": [
        "cessair",
        "helper",
        "utility",
        "catalyst",
        "extension"
    ],
    "homepage": "https://cessair.github.io/",
    "bugs": {
        "url": "https://github.com/cessair/cessair/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Yongbin Min",
        "email": "contact@cichol.com",
        "url": "https://www.cichol.com/"
    },
    "main": "releases",
    "directories": {
        "lib": "releases",
        "test": "tests"
    },
    "repository": "https://github.com/cessair/cessair/tree/master/packages/core",
    "scripts": {
        "postinstall": "npm run build",
        "prepublishOnly": "cessair generate-npmignore",
        "build": "npm run build:babelrc && npm run build:transpile",
        "build:babelrc": "cessair generate-babelrc",
        "build:transpile": "babel sources --out-dir releases --source-maps inline --quiet",
        "test": "npm run test:eslint && npm run test:ava",
        "test:eslint": "eslint sources",
        "test:ava": "ava tests/*.js"
    },
    "devDependencies": {
        "@cessair/building": "^1.1.0",
        "@cessair/cli": "^1.0.0"
    },
    "engines": {
        "node": ">=8.9.3",
        "npm": ">=5.6.0"
    },
    "ava": {
        "require": "babel-register",
        "babel": "inherit"
    }
}
